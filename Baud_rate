module baud_gen #(parameter BAUD_RATE = 9600, CLK_FREQ = 50000000)(
    input clk,
    input rst,
    output reg tick
);
    localparam COUNT_MAX = CLK_FREQ / BAUD_RATE;
    integer count = 0;

    always @(posedge clk or posedge rst) begin
        if (rst) begin
            count <= 0;
            tick <= 0;
        end else begin
            if (count == COUNT_MAX/2) begin
                tick <= 1;
                count <= 0;
            end else begin
                tick <= 0;
                count <= count + 1;
            end
        end
    end
endmodule
